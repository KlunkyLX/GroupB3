// Brightness by Rusty Robison. 
// Brightness is the relative lightness or darkness of a color.
// Move the cursor vertically over each bar to alter its brightness. 

// Tristan Skinner

// Import libraries
//--------------------------------------------------------------------------------//
import spout.*;
//--------------------------------------------------------------------------------//

// Global variables
//--------------------------------------------------------------------------------//
Spout spout;
int barWidth = 20;
int lastBar = -1;
//--------------------------------------------------------------------------------//

//--------------------------------------------------------------------------------//
//--------------------------------- Setup Start ----------------------------------//
//--------------------------------------------------------------------------------//

void setup() {
  size(1920, 1080, P2D);
  colorMode(HSB, width, 100, width);
  noStroke();
  background(0);

  spout = new Spout(this);
  spout.createSender("2. walking mouse");  // create a named sender
}  // setup enclsng brce
//--------------------------------------------------------------------------------//
//---------------------------------- Setup End -----------------------------------//
//--------------------------------------------------------------------------------//

//--------------------------------------------------------------------------------//
//---------------------------------- Draw Start ----------------------------------//
//--------------------------------------------------------------------------------//

void draw() {
  int whichBar = mouseX / barWidth;
  if (whichBar != lastBar) {
    int barX = whichBar * barWidth;
    fill(barX, 100, mouseY);
    rect(barX, 0, barWidth, height);
    lastBar = whichBar;
  }
  spout.sendTexture();
}  // draw enclsng brce
//--------------------------------------------------------------------------------//
//----------------------------------- Draw End -----------------------------------//
